{
    "experiment_name": "GenOp-TNO-Diffusion-Inc",
    "description": "TNO + Diffusion generative operator for incompressible flows",

    "model_type": "genop-tno-diffusion",
    "correction_strength": 1.0,

    "data_dir": "./data/inc",
    "batch_size": 2,
    "input_length": 10,
    "output_length": 10,
    "height": 64,
    "width": 64,
    "channels": 3,
    "num_workers": 4,
    "use_augmentation": false,

    "stage1_epochs": 80,
    "stage2_epochs": 40,
    "stage1_lr": 0.0005,
    "stage2_lr": 0.0003,
    "enable_joint_finetuning": true,
    "joint_finetuning_epochs": 15,

    "optimizer_type": "adamw",
    "weight_decay": 0.0001,
    "scheduler_type": "cosine",

    "use_l1_loss": true,
    "use_perceptual_loss": true,

    "device": "auto",
    "enable_gradient_checkpointing": true,
    "use_mixed_precision": true,

    "checkpoint_dir": "./checkpoints/inc/genop_tno_diffusion",
    "checkpoint_frequency": 10,
    "log_dir": "./logs/inc/genop_tno_diffusion",
    "log_level": "INFO",

    "early_stopping_patience": 40
}