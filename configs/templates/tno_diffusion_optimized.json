{
    "_description": "Optimized template for TNO + Diffusion generative operators",
    "_characteristics": "Transformer-based temporal modeling, attention mechanisms, excellent for long sequences",

    "model_type": "genop-tno-diffusion",
    "correction_strength": 0.9,

    "_tno_specific_settings": {
        "batch_size_recommendations": {
            "inc_64x64": 4,
            "inc_128x128": 2,
            "tra_128x128": 1,
            "iso_64x64": 6
        },
        "sequence_length_recommendations": {
            "inc": 12,
            "tra": 8,
            "iso": 14
        },
        "attention_optimization": true
    },

    "training_schedule": {
        "stage1_epochs": 100,
        "stage2_epochs": 50,
        "stage1_lr": 0.0005,
        "stage2_lr": 0.0003,
        "enable_joint_finetuning": true,
        "joint_finetuning_epochs": 20,
        "warmup_epochs": 10
    },

    "optimization": {
        "optimizer_type": "adamw",
        "weight_decay": 0.0001,
        "scheduler_type": "cosine",
        "clip_grad_norm": 0.8,
        "adam_betas": [0.9, 0.999]
    },

    "loss_configuration": {
        "use_l1_loss": true,
        "l1_loss_weight": 0.15,
        "use_perceptual_loss": true,
        "perceptual_loss_weight": 0.1
    },

    "memory_optimization": {
        "enable_gradient_checkpointing": true,
        "use_mixed_precision": true,
        "adaptive_batch_sizing": true,
        "attention_optimization": true
    },

    "augmentation_strategy": {
        "inc": "standard",
        "tra": "conservative",
        "iso": "aggressive"
    },

    "dataset_specific_overrides": {
        "inc": {
            "channels": 3,
            "physics_loss_weight": 0.1,
            "use_augmentation": true,
            "attention_sequence_length": 12
        },
        "tra": {
            "channels": 4,
            "shock_loss_weight": 0.4,
            "use_augmentation": false,
            "correction_strength": 1.0,
            "attention_sequence_length": 8
        },
        "iso": {
            "channels": 3,
            "energy_spectrum_loss_weight": 0.25,
            "use_augmentation": true,
            "correction_strength": 0.7,
            "attention_sequence_length": 14
        }
    },

    "model_architecture": {
        "transformer_layers": 6,
        "attention_heads": 8,
        "d_model": 256,
        "d_ff": 1024,
        "dropout": 0.1,
        "positional_encoding": true
    },

    "hardware_settings": {
        "device": "auto",
        "num_workers": 4,
        "prefetch_factor": 2,
        "pin_memory": true,
        "gpu_memory_fraction": 0.9
    },

    "checkpointing": {
        "checkpoint_frequency": 8,
        "save_best_only": true,
        "early_stopping_patience": 40
    },

    "logging": {
        "log_level": "INFO",
        "log_frequency": 10,
        "tensorboard_enabled": true,
        "attention_visualization": true
    }
}